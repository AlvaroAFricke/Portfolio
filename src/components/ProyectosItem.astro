---
interface Props {
  titulo: string;
  descripcion: string;
  tecnos: string[];
  codigo: string;
  enlace: string;
}
const { titulo, descripcion, tecnos, codigo, enlace } = Astro.props;

import Tecnos from "../components/Tecnologias.astro";
---

<div
  class="relative rounded overflow-hidden h-full w-full ring-2 ring-neutral-500"
>
  <div class="h-full w-full flex flex-col justify-between">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">{titulo}</div>
      <p class="text-gray-700 text-base">
        {descripcion}
      </p>
    </div>
    <div class="px-6 py-4">
      <ul class="pb-4 flex flex-col ml-2">
        {tecnos.map((tecno) => <Tecnos tecno={tecno} />)}
      </ul>

      {
        codigo && (
          <a
            target="_blank"
            href={codigo}
            class="text-black bg-green-300 hover:bg-neutral-800 hover:text-slate-300 hover:ring-green-300 ring-2 ring-green-500 rounded p-2 mr-2"
          >
            Codigo
          </a>
        )
      }

      {
        enlace && (
          <a
            target="_blank"
            href={enlace}
            class="text-black bg-green-300 hover:bg-neutral-800 hover:text-slate-300 hover:ring-green-300 ring-2 ring-green-500 rounded p-2"
          >
            Proyecto
          </a>
        )
      }
    </div>
  </div>
</div>
