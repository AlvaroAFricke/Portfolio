---
interface Props {
  nombre: string;
  logo: string;
}
const { nombre, logo } = Astro.props;
---

<div class="flex flex-col items-center p-3 item">
  <img
    src={logo}
    alt=""
    class="size-14 animate-pulse animate-infinite animate-ease-in hover:animate-none"
  />
  <h3 class="pt-1 hidden lg:block">{nombre}</h3>
</div>
