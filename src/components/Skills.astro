---
import Data from "../data.json";
import SkillCard from "../components/SkillCard.astro";
---

<section id="Skills" class="Skills mx-3">
  <div class="pb-8 pt-6 flex items-center align-middle flex-col">
    <h1 class="text-4xl font-bold text-center text-gray-900">Skills</h1>

    <div class="grid grid-cols-2 gap-5 md:grid-cols-4 mt-5">
      {
        Data.skills.map((elemento) => (
          <SkillCard categoria={elemento.category} />
        ))
      }
    </div>
  </div>
</section>

<style>
  .proyectos {
    background-color: white;
  }
</style>
