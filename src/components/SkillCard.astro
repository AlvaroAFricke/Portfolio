---
import Data from "../data.json";
interface Props {
  categoria: string;
}
const { categoria } = Astro.props;

import SkillItem from "../components/SkillItem.astro";
const index = Data.skills.findIndex((item) => item.category === categoria);
---

<div
  class="max-w-sm rounded overflow-hidden flex flex-col justify-between shadow-lg"
>
  <div class="px-6 py-4 flex items-center flex-col">
    <div class="font-bold text-xl mb-2">{categoria}</div>
    <hr class="container border-slate-700" />
    <ul class="grid grid-cols-2">
      {
        Data.skills[index].herramientas.map((elemnto) => (
          <SkillItem nombre={elemnto.nombre} logo={elemnto.logo} />
        ))
      }
    </ul>
  </div>
</div>
